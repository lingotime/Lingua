<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoChatActivity">

    <com.twilio.video.VideoView
        android:id="@+id/activity_video_chat_subscriber_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></com.twilio.video.VideoView>

    <com.twilio.video.VideoView
        android:id="@+id/activity_video_chat_publisher_container"
        android:layout_width="72dp"
        android:layout_height="128dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/activity_video_chat_subscriber_container"
        app:layout_constraintTop_toTopOf="@+id/activity_video_chat_subscriber_container" />

    <ImageView
        android:id="@+id/activity_video_chat_connect_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:tint="@color/linguaWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/activity_video_chat_connect_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:tint="@color/linguaGreen"
        app:layout_constraintBottom_toBottomOf="@+id/activity_video_chat_connect_button"
        app:layout_constraintEnd_toEndOf="@+id/activity_video_chat_connect_button"
        app:layout_constraintStart_toStartOf="@+id/activity_video_chat_connect_button"
        app:layout_constraintTop_toTopOf="@+id/activity_video_chat_connect_button"
        app:srcCompat="@drawable/check_mark" />

    <ImageView
        android:id="@+id/activity_video_chat_disconnect_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:tint="@color/linguaWhite"
        app:layout_constraintBottom_toBottomOf="@+id/activity_video_chat_subscriber_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/activity_video_chat_disconnect_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:tint="@color/linguaRed"
        app:layout_constraintBottom_toBottomOf="@+id/activity_video_chat_disconnect_button"
        app:layout_constraintEnd_toEndOf="@+id/activity_video_chat_disconnect_button"
        app:layout_constraintStart_toStartOf="@+id/activity_video_chat_disconnect_button"
        app:layout_constraintTop_toTopOf="@+id/activity_video_chat_disconnect_button"
        app:srcCompat="@drawable/cancel" />

    <ImageView
        android:id="@+id/activity_video_chat_switch_camera_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:tint="@color/linguaBlack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/activity_video_chat_switch_camera_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/activity_video_chat_switch_camera_button"
        app:layout_constraintEnd_toEndOf="@+id/activity_video_chat_switch_camera_button"
        app:layout_constraintStart_toStartOf="@+id/activity_video_chat_switch_camera_button"
        app:layout_constraintTop_toTopOf="@+id/activity_video_chat_switch_camera_button"
        app:srcCompat="@drawable/ic_switch_camera_24px" />

</androidx.constraintlayout.widget.ConstraintLayout>