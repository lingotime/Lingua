<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileCreationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_profile_creation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginBottom="20dp"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/activity_profile_creation_profileImage"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user_outline" />

        <!--<TextView-->
            <!--android:id="@+id/activity_profile_creation_fullName"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@+id/activity_profile_creation_profileImage"-->
            <!--android:text="TextView" />-->

        <!--<TextView-->
            <!--android:id="@+id/activity_profile_creation_username"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/activity_profile_creation_fullName"-->
            <!--android:layout_toRightOf="@+id/activity_profile_creation_profileImage"-->
            <!--android:text="TextView" />-->
    </androidx.appcompat.widget.Toolbar>
    <android.support.design.widget.CoordinatorLayout
        android:layout_below="@+id/activity_profile_creation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_below="@+id/activity_profile_creation_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Country of Origin: " />

                    <com.hootsuite.nachos.NachoTextView
                        android:id="@+id/activity_profile_creation_originCountry"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/textView3"
                        android:hint="Where are you from?"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/activity_profile_creation_dobCard"
                        android:layout_below="@+id/activity_profile_creation_dobCard"
                        android:text="Primary Languages: "
                        />

                    <com.hootsuite.nachos.NachoTextView
                        android:id="@+id/activity_profile_creation_currentLanguages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_dobCard"
                        android:layout_toRightOf="@+id/textView4"
                        android:hint="Which languages do you currently speak?"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_currentLanguages"
                        android:layout_alignStart="@+id/textView4"
                        android:text="Target Languages: "
                        android:layout_alignLeft="@+id/textView4" />

                    <com.hootsuite.nachos.NachoTextView
                        android:id="@+id/activity_profile_creation_targetLanguages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_currentLanguages"
                        android:layout_toRightOf="@+id/textView5"
                        android:hint="Which languages are you trying to learn?"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_targetLanguages"
                        android:layout_alignStart="@+id/textView5"
                        android:text="Target Countries: "
                        android:layout_alignLeft="@+id/textView5" />

                    <com.hootsuite.nachos.NachoTextView
                        android:id="@+id/activity_profile_creation_targetCountries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_targetLanguages"
                        android:layout_toRightOf="@+id/textView6"
                        android:hint="Which countries are you interested in?"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_targetCountries"
                        android:layout_alignStart="@+id/textView6"
                        android:text="Enter a short bio: "
                        android:layout_alignLeft="@+id/textView6" />

                    <EditText
                        android:id="@+id/activity_profile_creation_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activity_profile_creation_targetCountries"
                        android:layout_toRightOf="@+id/textView7"
                        android:hint="Fun facts about yourself"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/activity_profile_creation_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_below="@+id/activity_profile_creation_bio"
            android:layout_centerHorizontal="true"/>
    </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>