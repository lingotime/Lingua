<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileCreationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/activity_profile_creation_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Toolbar
            android:id="@+id/activity_profile_creation_toolbar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#E91E63"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <ImageView
                android:id="@+id/activity_profile_creation_profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user_outline" />

            <TextView
                android:id="@+id/activity_profile_creation_fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/activity_profile_creation_profileImage"
                android:text="TextView" />

            <TextView
                android:id="@+id/activity_profile_creation_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_profile_creation_fullName"
                android:layout_toRightOf="@+id/activity_profile_creation_profileImage"
                android:text="TextView" />
        </Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_profile_creation_appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Country of Origin: " />

                <AutoCompleteTextView
                    android:id="@+id/activity_profile_creation_originCountry"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/textView3"
                    android:hint="Where are you from?"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_below="@+id/activity_profile_creation_originCountry"
                    android:text="Primary Languages: "
                    />

                <MultiAutoCompleteTextView
                    android:id="@+id/activity_profile_creation_currentLanguages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_originCountry"
                    android:layout_toRightOf="@+id/textView4"
                    android:hint="Which languages do you currently speak?"
                    />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_currentLanguages"
                    android:layout_alignStart="@+id/textView4"
                    android:text="Target Languages: "
                    />

                <MultiAutoCompleteTextView
                    android:id="@+id/activity_profile_creation_targetLanguages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_currentLanguages"
                    android:layout_toRightOf="@+id/textView5"
                    android:hint="Which languages are you trying to learn?"
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_targetLanguages"
                    android:layout_alignStart="@+id/textView5"
                    android:text="Target Countries: "
                    />

                <MultiAutoCompleteTextView
                    android:id="@+id/activity_profile_creation_targetCountries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_targetLanguages"
                    android:layout_toRightOf="@+id/textView6"
                    android:hint="Which countries are you interested in?"
                    />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_targetCountries"
                    android:layout_alignStart="@+id/textView6"
                    android:text="Enter a short bio: "
                    />

                <EditText
                    android:id="@+id/activity_profile_creation_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_creation_targetCountries"
                    android:layout_toRightOf="@+id/textView7"
                    android:hint="Fun facts about yourself"/>

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>


</RelativeLayout>