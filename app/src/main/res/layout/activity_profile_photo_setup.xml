<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_profile_picture_btnCapture"
        android:text="Take picture"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_profile_picture_btnChoose"
        android:text="Select picture"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@android:color/black"
        android:id="@+id/activity_profile_picture_ivImageTaken"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_profile_picture_btnProfile"
        android:text="Set as Profile Picture!"/>

</LinearLayout>